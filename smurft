#!/bin/sed -f

:a
N
$!ba
s/\n/\r/g
s/\s*\r\s*/\r/g
s/\r\+/\r/g
s/\t\+/ /g
s/\r\/\/[^\r]*/\r/g
s/\r \+/\r/g
s/\r?\s?else\s?\r*/\relse /g
s/\r?\s?if\s?\r*/\rif /g
s/\r?\s?for\s?\r*/\rfor /g
s/\r?\s?while\s?\r*/\rwhile /g
s/\r?\s?do\s?\r*/\rdo /g
s/\r?\s?var\s?\r*/\rvar /g
s/\r?\s?break\s?\r*/\rbreak /g
s/\r?\s?function\s?\r*/\rfunction /g
s/\r?\s?continue\s?\r*/\rcontinue /g
s/[ ]\+/ /g
s/\r\+\s*/\r/g
s/\r?\s\+\r?/ /g
s/\r?\s?.\s?\r?/./g
s/\r?\s?,\s?\r?/,/g
s/\r?\s?;\s?\r?/;/g
s/\r?\s?:\s?\r?/:/g
s/\r?\s?{\s?\r?/{/g
s/\r?\s?}\s?\r?/}/g
s/\r?\s?&\s?\r?/&/g
s/\r?\s?|\s?\r?/|/g
s/\r?\s?%\s?\r?/%/g
s/\r?\s?<\s?\r?/</g
s/\r?\s?>\s?\r?/>/g
s/\r?\s?=\s?\r?/=/g
s/\r?\s?+\s?\r?/+/g
s/\r?\s?-\s?\r?/-/g
s/\r?\s?\/\s?\r?/\//g
s/\r?\s?\*\s?\r?/\*/g
s/\r?\s?\?\s?\r?/\?/g
s/\r?\s?)\s?\r?/)/g
s/\r?\s?(\s?\r?/(/g
s/\r?\s?]\s?\r?/]/g
s/\r?\s?[[]\s?\r?/[/g
s/\r?\s?'"'"'\s?\r?/'"'"'/g
s/\r?\s?"\s?\r?/"/g
s/{\r/{/g
s/\r}/}/g
s/;\r/;/g
s/,\r/,/g
s/:\r/:/g
s/}\s\+else/}else/g
s/\s*>\s*/>/g
s/\s*<\s*/</g
s/\s*{\s*/{/g
s/\s*}\s*/}/g
s/\s*(\s*/(/g
s/\s*)\s*/)/g
s/\s*\[\s*/[/g
s/\s*\]\s*/]/g
s/\s*?\s*/?/g
s/\s*:\s*/:/g
s/\/\r/\//g
s/\/\*/\r\/\*\*/g
s/\r/\n/g
